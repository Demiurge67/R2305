--- a/drivers/bcma/sprom.c
+++ b/drivers/bcma/sprom.c
@@ -635,6 +635,41 @@ int bcma_sprom_get(struct bcma_bus *bus)
 	if (bus->chipinfo.id == BCMA_CHIP_ID_BCM4331 ||
 		bus->chipinfo.id == BCMA_CHIP_ID_BCM43431)
 		bcma_chipco_bcm4331_ext_pa_lines_ctl(&bus->drv_cc, true);
 
+	/* Принудительный fallback SPROM для ASUS RT-N66U (BCM4331 x2) */
+	if (bus->host_pci && bus->host_pci->device == 0x4331) {
+		pr_info("BCM4331 fallback SPROM init for bus %d\n", bus->host_pci->bus->number);
+		
+		/* Заполняем структуру SPROM минимальными корректными данными */
+		memset(&bus->sprom, 0, sizeof(bus->sprom));
+		bus->sprom.revision = 9; /* Ревизия, которую поддерживает bcma */
+		bus->sprom.dev_id_override = 1; /* Ключевой флаг! */
+		
+		/* Разные dev_id для двух чипов, как в DD-WRT */
+		if (bus->host_pci->bus->number == 0) {
+			bus->sprom.dev_id = 0x4332; /* Первый чип (phy0) */
+		} else if (bus->host_pci->bus->number == 1) {
+			bus->sprom.dev_id = 0x4333; /* Второй чип (phy1) */
+		} else {
+			bus->sprom.dev_id = 0x4331; /* Запасной вариант */
+		}
+		
+		/* Калибровочные данные для 2.4 ГГц (типовые для BCM4331) */
+		bus->sprom.pa0b0 = 0x15A3;
+		bus->sprom.pa0b1 = 0xFAE1;
+		bus->sprom.pa0b2 = 0xFEAC;
+		/* Калибровочные данные для 5 ГГц */
+		bus->sprom.pa1b0 = 0x15A3;
+		bus->sprom.pa1b1 = 0xFAE1;
+		bus->sprom.pa1b2 = 0xFEAC;
+		/* Антенны (2 антенны на оба диапазона) */
+		bus->sprom.ant_available_bg = 0x3;
+		bus->sprom.ant_available_a = 0x3;
+		
+		bus->sprom.size = sizeof(bus->sprom);
+		pr_info("BCM4331 fallback SPROM set: dev_id=0x%04x\n", bus->sprom.dev_id);
+		return 0;
+	}
+
 	bcma_sprom_read(bus, out);
 
 	if (bcma_sprom_check_crc(out, words))
